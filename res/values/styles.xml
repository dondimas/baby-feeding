<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailLayoutPadding">
        <item name="android:paddingLeft">@dimen/fragment_window_margin</item>
        <item name="android:paddingRight">@dimen/fragment_window_margin</item>
        <item name="android:paddingTop">@dimen/default_padding_half</item>
        <item name="android:paddingBottom">@dimen/default_padding_half</item>
    </style>
    <style name="RunningLabel" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NormalText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>


    <style name="ChoiceEditText" parent="ButtonText">
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:background">@drawable/choice_button</item>
    </style>

    <style name="Tabs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WideButton">
        <item name="android:background">@drawable/wide_button_selector</item>
    </style>

    <style name="WideButtonText" parent="Tabs">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="RowText"  >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/feed_list_text_size</item>

        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FeedListHeader" parent="RowText">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="FeedDayListHeader" parent="RowText">
        <item name="android:textSize">@dimen/feed_day_header_text_size</item>
    </style>
    <style name="ReminderListRowText" parent="RowText">
        <item name="android:textColor">#ffffff</item>
    </style>


    <dimen name="fragment_window_margin">5dp</dimen>
    <dimen name="default_padding_half">5dp</dimen>
    <dimen name="button_default_height">48dp</dimen>
</resources>