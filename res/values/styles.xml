<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DetailLayoutPadding">
        <item name="android:paddingLeft">@dimen/fragment_window_margin</item>
        <item name="android:paddingRight">@dimen/fragment_window_margin</item>
        <item name="android:paddingTop">@dimen/default_padding_half</item>
        <item name="android:paddingBottom">@dimen/default_padding_half</item>
    </style>
    <style name="RunningLabel" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="NormalText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>


    <style name="FormEditText" parent="ButtonText">
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:background">@drawable/wide_button_shape</item>
    </style>

    <style name="Tabs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tab_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WideButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/wide_button_selector</item>
        <item name="android:layout_marginLeft">@dimen/list_view_margin</item>
        <item name="android:layout_marginRight">@dimen/list_view_margin</item>
        <item name="android:textColor">@color/button_title</item>
    </style>

    <style name="WideButtonShort">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/wide_button_short_selector</item>
        <item name="android:textColor">@color/button_title</item>
    </style>

    <style name="SquareButton">
        <item name="android:background">@drawable/square_button_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/button_title</item>
        <item name="android:textSize">@dimen/feed_running_button_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="WideButtonText" parent="Tabs">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/button_title</item>
    </style>

    <style name="RowText"  >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/feed_list_text_size</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FormLabel"  >
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/feed_list_text_size</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FeedListHeader" parent="RowText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="StatsListHeader" parent="FeedListHeader">
        <item name="android:textSize">@dimen/feed_day_header_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="ReminderListRowText" parent="RowText">
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="Theme.Styled" parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        <item name="subtitleTextStyle">@style/Widget.Styled.ActionBar</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid">
        <item name="background">@color/separator_dark</item>
        <item name="android:background">@color/separator_dark</item>
        <item name="android:textColor">@color/actionbar_white_text</item>
        <item name="textColorPrimary">@color/actionbar_white_text</item>
        <item name="itemPadding">1dip</item>

        <item name="backgroundSplit">@color/separator_dark</item>
        <item name="android:backgroundSplit">@color/separator_dark</item>
    </style>



</resources>