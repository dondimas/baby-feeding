<?xml version="1.0" encoding="utf-8"?>
<resources>


    
    <style name="HeaderText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3.0</item>
    </style>

    <style name="RowText"  >
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/feed_list_text_size</item>

        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="FeedListHeader" parent="RowText">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="Licenses" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="NotificationText">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DetailsTheme">
        <item name="android:background">#e3e3e4</item>
    </style>

</resources>