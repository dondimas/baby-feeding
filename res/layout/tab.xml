<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/tab_active_indicator_states"
                android:gravity="center_vertical">
    <LinearLayout android:id="@+id/top_border"
                  android:layout_width="fill_parent"
                  android:layout_height="3dp"
                  android:background="@color/separator_dark"/>
    <LinearLayout android:layout_width="0dp"
                  android:layout_height="37dp"
                  android:id="@+id/separator_left"
                  android:layout_below="@+id/top_border"
                  android:background="@color/separator_dark"/>
    <ImageView
            android:id="@+id/tab_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/separator_left"
            android:src="@drawable/tab_bar_feedings"
            />

    <TextView
            android:id="@+id/tab_text"
            style="@style/Tabs"
            android:text="Feedings"
            android:layout_toRightOf="@+id/tab_image"
            />

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="3dp"
                  android:layout_below="@+id/separator_left"
                  android:background="@color/separator_dark"/>
</RelativeLayout>