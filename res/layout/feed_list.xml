<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background_mother_child1"

        >

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center"
             >
        <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Left Breast"
                android:button="@drawable/check_left_breast_selector"
                android:id="@+id/left_breast"
                android:layout_weight="0.35"
                android:layout_gravity="center"/>
        <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Right Breast"
                android:button="@drawable/check_right_breast_selector"
                android:id="@+id/right_breast"
                android:layout_weight="0.35"
                android:layout_gravity="center"/>

        <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bottle"
                android:button="@drawable/check_bottle_selector"
                android:id="@+id/bottle_source"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"/>
    </LinearLayout>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Start Feeding"
            android:id="@+id/start_feed_button"/>

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Continue Feeding"
            android:id="@+id/continue_feed_button"
            android:visibility="gone"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Finalize"
            android:id="@+id/finalize_feed_button"
            android:visibility="gone"/>
    <include layout="@layout/feed_list_header" />
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/list_view" android:layout_gravity="left|center_vertical"/>
</LinearLayout>

