<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_blue">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:textSize="20dp"
                android:id="@+id/current_feed_time"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/tab_active_indicator"
                android:layout_weight="0.5"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:textSize="20dp"
                android:id="@+id/start_feed_time"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:layout_weight="0.5"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_gravity="center"
            >

        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:src="@drawable/check_left_breast_selector_b"
                android:id="@+id/left_breast"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:gravity="center"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:src="@drawable/check_right_breast_selector_b"
                android:id="@+id/right_breast"
                android:layout_weight="0.5"
                android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Bottle"
                android:src="@drawable/check_bottle_selector_b"
                android:id="@+id/bottle_source"
                android:layout_gravity="center"
                android:layout_margin="3dp"/>
    </LinearLayout>


    <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Finish feeding"
            android:textSize="20dp"
            android:id="@+id/finish_current_feeding" android:layout_gravity="center"/>
    <Button
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:text="Cancel"
            android:textSize="20dp"
            android:background="#FF0000"
            android:id="@+id/cancel_current_feeding" android:layout_gravity="center"/>
</LinearLayout>